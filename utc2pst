#!/bin/zsh

# Check if input is provided
if [ -z "$1" ]; then
    echo "Usage: ./utc2pst '2025-06-13T12:30:00Z'"
    exit 1
fi

# Parse UTC time to epoch (seconds since 1970-01-01 00:00:00 UTC)
epoch=$(date -j -u -f "%Y-%m-%dT%H:%M:%SZ" "$1" "+%s")

# Now display that epoch in Pacific time
TZ="America/Los_Angeles" date -j -f "%s" "$epoch" "+%Y-%m-%d %I:%M:%S %p %Z" 